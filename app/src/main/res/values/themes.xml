<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EventFinder" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/green</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="snackbarStyle">@style/snackbar</item>
        <item name="snackbarTextViewStyle">@style/snackbar_textview</item>
    </style>

    <style name="Theme.EventFinder.Splash">
        <item name="android:windowBackground">@color/gray</item>
    </style>
</resources>