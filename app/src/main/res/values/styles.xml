<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input">
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
    </style>
    <style name="spinner_theme">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
    </style>
    <style name="auto_detect_switch">
        <item name="colorControlActivated">@color/green</item>
        <item name="android:colorForeground">@color/hint</item>
    </style>
    <style name="custom_progress">
        <item name="colorControlActivated">@color/green</item>
        <item name="android:colorForeground">@color/green</item>
    </style>
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/rounded_snack_bar</item>
    </style>
    <style name="snackbar_textview" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="popularity_progressbar">
        <item name="colorControlActivated">@color/popularity_progressbar_color</item>
    </style>
</resources>